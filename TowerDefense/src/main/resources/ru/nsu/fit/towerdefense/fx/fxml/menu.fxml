<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<StackPane styleClass="root" xmlns="http://javafx.com/javafx/100.2-internal" xmlns:fx="http://javafx.com/fxml/1">
    <stylesheets>
        <URL value="@../css/main.css"/>
        <URL value="@../css/icons.css" />
        <URL value="@../css/menu.css"/>
    </stylesheets>
    <VBox styleClass="content">
        <Label styleClass="header">Levels</Label>
        <FlowPane fx:id="levelsFlowPane" styleClass="levels-flow-pane" />
    </VBox>
    <GridPane styleClass="bar-grid-pane" pickOnBounds="false">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" />
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="NEVER" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="NEVER" />
        </rowConstraints>
        <HBox>
            <HBox>
                <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" styleClass="research-progress-icon" />
                <Label fx:id="researchLabel" />
            </HBox>
        </HBox>
        <HBox GridPane.columnIndex="2">
            <HBox>
                <ImageView fx:id="techTreeImageView" fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true" styleClass="tech-tree-icon" />
            </HBox>
        </HBox>
    </GridPane>
    <Button fx:id="clearButton" visible="false" managed="false" StackPane.alignment="BOTTOM_LEFT" style="-fx-background-color: red;">Clear saves</Button>
    <Button fx:id="addResearchPointsButton" visible="false" managed="false" StackPane.alignment="BOTTOM_RIGHT">Add 10 research points</Button>
</StackPane>
